{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports":true,
    "jsx": "react",
    "lib": [ "dom", "es6", "es2017" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "tsc_dist",
    "strict": true,
    "strictFunctionTypes": false,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.*",
    "dist"
  ]
}
